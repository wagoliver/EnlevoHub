// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== CORE SYSTEM ====================

model Tenant {
  id        String   @id @default(uuid())
  name      String
  document  String   @unique // CNPJ
  plan      Plan     @default(FREE)
  settings  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users              User[]
  projects           Project[]
  suppliers          Supplier[]
  contractors        Contractor[]
  brokers            Broker[]
  contracts          Contract[]
  materials          Material[]
  bankAccounts       BankAccount[]
  importBatches      ImportBatch[]
  activityTemplates  ActivityTemplate[]
  measurements       Measurement[]
  levantamentos      ProjetoLevantamento[]
  servicoTemplates   ServicoTemplate[]
  ambienteTags       AmbienteTag[]

  @@map("tenants")
}

enum Plan {
  FREE
  BASIC
  PRO
  ENTERPRISE
}

model User {
  id           String   @id @default(uuid())
  tenantId     String
  email        String   @unique
  password     String
  name         String
  role         Role     @default(VIEWER)
  permissions  Json?
  isActive     Boolean  @default(true)
  isApproved   Boolean  @default(true)
  contractorId String?  @unique
  brokerId     String?  @unique
  lastLogin    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  tenant            Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  contractor        Contractor?         @relation(fields: [contractorId], references: [id])
  broker            Broker?             @relation(fields: [brokerId], references: [id])
  auditLogs            AuditLog[]
  passwordResetTokens  PasswordResetToken[]
  projectEvolutions    ProjectEvolution[]
  transactions      FinancialTransaction[]
  importBatches     ImportBatch[]
  measurementsReported Measurement[]    @relation("measurementReporter")
  measurementsReviewed Measurement[]    @relation("measurementReviewer")

  @@index([tenantId])
  @@index([email])
  @@map("users")
}

enum Role {
  ROOT          // super admin - acesso total + sistema (armazenamento, performance)
  MASTER        // admin do tenant - acesso total ao tenant (sem telas de sistema)
  ENGINEER      // (antigo MANAGER) aprova medicoes, gerencia obra
  ADMIN_STAFF   // financeiro, compras, fornecedores
  CONTRACTOR    // empreiteiro - acesso restrito
  BROKER        // corretor - acesso restrito a unidades/vendas
  VIEWER        // somente leitura
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  entity    String
  entityId  String
  changes   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("password_reset_tokens")
}

// ==================== PROJECTS & UNITS ====================

model Project {
  id              String        @id @default(uuid())
  tenantId        String
  name            String
  description     String?
  address         Json
  status          ProjectStatus @default(PLANNING)
  startDate       DateTime?
  expectedEndDate DateTime?
  actualEndDate   DateTime?
  budget          Decimal       @db.Decimal(15, 2)
  schedulingMode  SchedulingMode?
  holidays        Json?
  metadata             Json?
  quantidadeUnidades   Int           @default(1)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  tenant              Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  units               Unit[]
  floorPlans          FloorPlan[]
  blocks              Block[]
  evolutions          ProjectEvolution[]
  purchaseOrders      PurchaseOrder[]
  financialTransactions FinancialTransaction[]
  contractorProjects  ContractorProject[]
  activities          ProjectActivity[]
  levantamentos       ProjetoLevantamento[]

  @@index([tenantId])
  @@index([status])
  @@map("projects")
}

model FloorPlan {
  id           String   @id @default(uuid())
  projectId    String
  name         String
  description  String?  @db.Text
  type         UnitType
  area         Decimal  @db.Decimal(10, 2)
  bedrooms     Int?
  bathrooms    Int?
  defaultPrice Decimal? @db.Decimal(15, 2)
  detalhado    Boolean  @default(false)
  metadata     Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  project        Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  units          Unit[]
  rooms          FloorPlanRoom[]
  measurements   FloorPlanMeasurement[]
  levantamentos  ProjetoLevantamento[]

  @@unique([projectId, name])
  @@index([projectId])
  @@map("floor_plans")
}

model FloorPlanRoom {
  id           String   @id @default(uuid())
  floorPlanId  String
  nome         String
  presetKey    String?
  tags         String[] @default([])
  comprimento  Decimal  @db.Decimal(8, 2)
  largura      Decimal  @db.Decimal(8, 2)
  peDireito    Decimal  @db.Decimal(4, 2) @default(2.80)
  qtdPortas    Int      @default(1)
  qtdJanelas   Int      @default(1)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  floorPlan FloorPlan @relation(fields: [floorPlanId], references: [id], onDelete: Cascade)

  @@index([floorPlanId])
  @@map("floor_plan_rooms")
}

model FloorPlanMeasurement {
  id              String   @id @default(uuid())
  floorPlanId     String
  category        String       // "TERRENO", "ALVENARIA", "PISO", etc.
  label           String       // Nome display: "√Årea de Piso"
  measurementType String       // "AREA_M2", "LINEAR_M", "QUANTITY", "VOLUME_M3"
  value           Decimal  @db.Decimal(12, 4)
  areaTipo        String?      // Mapa p/ AreaTipo do calculator: PISO, PAREDE_LIQ, etc.
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  floorPlan FloorPlan @relation(fields: [floorPlanId], references: [id], onDelete: Cascade)

  @@index([floorPlanId])
  @@map("floor_plan_measurements")
}

model Block {
  id        String   @id @default(uuid())
  projectId String
  name      String
  floors    Int?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  units   Unit[]

  @@unique([projectId, name])
  @@index([projectId])
  @@map("blocks")
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  PAUSED
  COMPLETED
  CANCELLED
}

model ProjectEvolution {
  id         String   @id @default(uuid())
  projectId  String
  date       DateTime @default(now())
  percentage Decimal  @db.Decimal(5, 2)
  phase      String
  photos     Json?
  notes      String?  @db.Text
  reportedBy String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [reportedBy], references: [id])

  @@index([projectId])
  @@index([date])
  @@map("project_evolutions")
}

model Unit {
  id          String     @id @default(uuid())
  projectId   String
  code        String
  type        UnitType
  floor       Int?
  area        Decimal    @db.Decimal(10, 2)
  bedrooms    Int?
  bathrooms   Int?
  price       Decimal?   @db.Decimal(15, 2)
  status      UnitStatus @default(AVAILABLE)
  blockId     String?
  floorPlanId String?
  metadata    Json?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  project        Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  block          Block?         @relation(fields: [blockId], references: [id], onDelete: SetNull)
  floorPlan      FloorPlan?     @relation(fields: [floorPlanId], references: [id], onDelete: SetNull)
  sales           Sale[]
  unitActivities  UnitActivity[]
  contractorUnits ContractorUnit[]

  @@unique([projectId, code])
  @@index([projectId])
  @@index([status])
  @@index([blockId])
  @@index([floorPlanId])
  @@map("units")
}

enum UnitType {
  APARTMENT
  HOUSE
  COMMERCIAL
  LAND
}

enum UnitStatus {
  AVAILABLE
  RESERVED
  SOLD
  BLOCKED
}

// ==================== SUPPLIERS & MATERIALS ====================

model Supplier {
  id          String         @id @default(uuid())
  tenantId    String
  name        String
  document    String // CNPJ/CPF
  type        SupplierType
  contacts    Json
  rating      Decimal?       @db.Decimal(3, 2)
  isActive    Boolean        @default(true)
  metadata    Json?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  tenant         Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  purchaseOrders PurchaseOrder[]
  materials      SupplierMaterial[]
  contracts      Contract[]

  @@index([tenantId])
  @@index([document])
  @@map("suppliers")
}

enum SupplierType {
  MATERIALS
  SERVICES
  BOTH
}

model Material {
  id           String   @id @default(uuid())
  tenantId     String
  name         String
  category     String
  unit         String
  currentPrice Decimal  @db.Decimal(10, 2)
  description  String?  @db.Text
  metadata     Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  suppliers           SupplierMaterial[]
  purchaseOrderItems  PurchaseOrderItem[]

  @@index([tenantId])
  @@index([category])
  @@map("materials")
}

model SupplierMaterial {
  id         String   @id @default(uuid())
  supplierId String
  materialId String
  price      Decimal  @db.Decimal(10, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@unique([supplierId, materialId])
  @@index([supplierId])
  @@index([materialId])
  @@map("supplier_materials")
}

// ==================== PURCHASES ====================

model PurchaseOrder {
  id           String             @id @default(uuid())
  projectId    String
  supplierId   String
  orderNumber  String
  orderDate    DateTime           @default(now())
  deliveryDate DateTime?
  status       PurchaseOrderStatus @default(PENDING)
  totalAmount  Decimal            @db.Decimal(15, 2)
  notes        String?            @db.Text
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  // Relations
  project Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  supplier Supplier           @relation(fields: [supplierId], references: [id])
  items   PurchaseOrderItem[]

  @@unique([projectId, orderNumber])
  @@index([projectId])
  @@index([supplierId])
  @@index([status])
  @@map("purchase_orders")
}

enum PurchaseOrderStatus {
  PENDING
  APPROVED
  ORDERED
  DELIVERED
  CANCELLED
}

model PurchaseOrderItem {
  id              String   @id @default(uuid())
  purchaseOrderId String
  materialId      String
  quantity        Decimal  @db.Decimal(10, 2)
  unitPrice       Decimal  @db.Decimal(10, 2)
  totalPrice      Decimal  @db.Decimal(15, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  purchaseOrder PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  material      Material      @relation(fields: [materialId], references: [id])

  @@index([purchaseOrderId])
  @@index([materialId])
  @@map("purchase_order_items")
}

// ==================== CONTRACTORS ====================

model Contractor {
  id          String   @id @default(uuid())
  tenantId    String
  name        String
  document    String // CNPJ/CPF
  specialty   String[]
  teamSize    Int?
  rating      Decimal? @db.Decimal(3, 2)
  contacts    Json
  isActive    Boolean  @default(true)
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant       Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user         User?
  projects     ContractorProject[]
  contracts    Contract[]
  measurements Measurement[]
  activities   ContractorActivity[]
  units        ContractorUnit[]

  @@index([tenantId])
  @@index([document])
  @@map("contractors")
}

model ContractorProject {
  id           String   @id @default(uuid())
  contractorId String
  projectId    String
  startDate    DateTime
  endDate      DateTime?
  role         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  contractor Contractor @relation(fields: [contractorId], references: [id], onDelete: Cascade)
  project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([contractorId, projectId])
  @@index([contractorId])
  @@index([projectId])
  @@map("contractor_projects")
}

model ContractorActivity {
  id                String   @id @default(uuid())
  contractorId      String
  projectActivityId String
  createdAt         DateTime @default(now())

  contractor Contractor      @relation(fields: [contractorId], references: [id], onDelete: Cascade)
  activity   ProjectActivity @relation(fields: [projectActivityId], references: [id], onDelete: Cascade)

  @@unique([contractorId, projectActivityId])
  @@index([contractorId])
  @@index([projectActivityId])
  @@map("contractor_activities")
}

model ContractorUnit {
  id           String   @id @default(uuid())
  contractorId String
  unitId       String
  createdAt    DateTime @default(now())

  contractor Contractor @relation(fields: [contractorId], references: [id], onDelete: Cascade)
  unit       Unit       @relation(fields: [unitId], references: [id], onDelete: Cascade)

  @@unique([contractorId, unitId])
  @@index([contractorId])
  @@index([unitId])
  @@map("contractor_units")
}

// ==================== BROKERS & SALES ====================

model Broker {
  id              String   @id @default(uuid())
  tenantId        String
  name            String
  document        String // CPF
  creci           String?
  contacts        Json
  commissionRate  Decimal  @db.Decimal(5, 2)
  isActive        Boolean  @default(true)
  metadata        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User?
  sales  Sale[]

  @@index([tenantId])
  @@index([document])
  @@map("brokers")
}

model Sale {
  id          String     @id @default(uuid())
  unitId      String
  brokerId    String?
  clientName  String
  clientDocument String
  clientContacts Json
  saleDate    DateTime   @default(now())
  salePrice   Decimal    @db.Decimal(15, 2)
  paymentPlan Json
  contractId  String?
  commission  Decimal    @db.Decimal(15, 2)
  status      SaleStatus @default(PENDING)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  unit     Unit      @relation(fields: [unitId], references: [id], onDelete: Cascade)
  broker   Broker?   @relation(fields: [brokerId], references: [id])
  contract Contract? @relation(fields: [contractId], references: [id])

  @@index([unitId])
  @@index([brokerId])
  @@index([status])
  @@map("sales")
}

enum SaleStatus {
  PENDING
  SIGNED
  PAID
  CANCELLED
}

// ==================== CONTRACTS ====================

model Contract {
  id          String         @id @default(uuid())
  tenantId    String
  type        ContractType
  partyId     String // ID of supplier, contractor, or client
  partyName   String
  startDate   DateTime
  endDate     DateTime?
  value       Decimal        @db.Decimal(15, 2)
  terms       String         @db.Text
  documentUrl String?
  status      ContractStatus @default(ACTIVE)
  metadata    Json?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  supplier   Supplier?   @relation(fields: [partyId], references: [id], map: "contract_supplier_fkey")
  contractor Contractor? @relation(fields: [partyId], references: [id], map: "contract_contractor_fkey")
  sales      Sale[]

  @@index([tenantId])
  @@index([type])
  @@index([status])
  @@map("contracts")
}

enum ContractType {
  SUPPLIER
  CONTRACTOR
  CLIENT
  BROKER
}

enum ContractStatus {
  DRAFT
  ACTIVE
  SUSPENDED
  EXPIRED
  TERMINATED
}

// ==================== FINANCIAL ====================

model BankAccount {
  id            String   @id @default(uuid())
  tenantId      String
  bankName      String
  accountNumber String
  balance       Decimal  @db.Decimal(15, 2)
  bankCode      String?
  agency        String?
  accountType   String?  // "CHECKING" | "SAVINGS"
  isActive      Boolean  @default(true)
  syncEnabled   Boolean  @default(false)
  lastSync      DateTime?
  metadata      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  tenant        Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  transactions  FinancialTransaction[]
  importBatches ImportBatch[]

  @@index([tenantId])
  @@map("bank_accounts")
}

model FinancialTransaction {
  id              String            @id @default(uuid())
  projectId       String?
  bankAccountId   String?
  type            TransactionType
  category        String
  amount          Decimal           @db.Decimal(15, 2)
  date            DateTime          @default(now())
  paymentMethod   String?
  description     String            @db.Text
  attachments     Json?
  status          TransactionStatus @default(PENDING)
  createdBy       String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Import fields
  externalId        String?
  rawDescription    String?           @db.Text
  importBatchId     String?

  // Reconciliation fields
  reconciliationStatus ReconciliationStatus @default(PENDING)
  linkedEntityType  String?
  linkedEntityId    String?
  linkedEntityName  String?

  // Relations
  project     Project?     @relation(fields: [projectId], references: [id], onDelete: SetNull)
  bankAccount BankAccount? @relation(fields: [bankAccountId], references: [id])
  user        User         @relation(fields: [createdBy], references: [id])
  importBatch ImportBatch? @relation(fields: [importBatchId], references: [id])

  @@index([projectId])
  @@index([bankAccountId])
  @@index([type])
  @@index([category])
  @@index([date])
  @@index([externalId])
  @@index([reconciliationStatus])
  @@map("financial_transactions")
}

model ImportBatch {
  id             String    @id @default(uuid())
  tenantId       String
  bankAccountId  String
  fileName       String
  fileType       String
  totalRecords   Int
  importedCount  Int
  duplicateCount Int
  periodStart    DateTime?
  periodEnd      DateTime?
  importedBy     String
  createdAt      DateTime  @default(now())

  // Relations
  tenant       Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  bankAccount  BankAccount            @relation(fields: [bankAccountId], references: [id])
  user         User                   @relation(fields: [importedBy], references: [id])
  transactions FinancialTransaction[]

  @@index([tenantId])
  @@index([bankAccountId])
  @@map("import_batches")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum TransactionStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum ReconciliationStatus {
  PENDING
  AUTO_MATCHED
  MANUAL_MATCHED
  IGNORED
}

// ==================== ACTIVITIES & MEASUREMENTS ====================

enum ActivityScope {
  ALL_UNITS
  SPECIFIC_UNITS
  GENERAL
}

enum ActivityStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum TemplateItemLevel {
  PHASE
  STAGE
  ACTIVITY
}

enum SchedulingMode {
  BUSINESS_DAYS
  CALENDAR_DAYS
}

enum MeasurementStatus {
  PENDING
  APPROVED
  REJECTED
}

model ActivityTemplate {
  id          String   @id @default(uuid())
  tenantId    String
  name        String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  items  ActivityTemplateItem[]

  @@index([tenantId])
  @@map("activity_templates")
}

model ActivityTemplateItem {
  id                String             @id @default(uuid())
  templateId        String
  name              String
  order             Int
  weight            Decimal            @db.Decimal(5, 2) @default(1)
  parentId          String?
  level             TemplateItemLevel  @default(ACTIVITY)
  percentageOfTotal Decimal?           @db.Decimal(5, 2)
  durationDays      Int?
  dependencies      Json?
  color             String?
  sinapiCodigo      String?          @db.VarChar(20)
  areaTipo          AreaTipo?
  tags              String[]         @default([])
  padrao            Boolean          @default(true)

  // Relations
  template ActivityTemplate   @relation(fields: [templateId], references: [id], onDelete: Cascade)
  parent   ActivityTemplateItem?  @relation("ItemHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children ActivityTemplateItem[] @relation("ItemHierarchy")

  @@index([templateId])
  @@index([parentId])
  @@map("activity_template_items")
}

model ProjectActivity {
  id               String            @id @default(uuid())
  projectId        String
  name             String
  weight           Decimal           @db.Decimal(5, 2) @default(1)
  order            Int
  scope            ActivityScope     @default(ALL_UNITS)
  status           ActivityStatus    @default(PENDING)
  parentId         String?
  level            TemplateItemLevel @default(ACTIVITY)
  plannedStartDate DateTime?
  plannedEndDate   DateTime?
  actualStartDate  DateTime?
  actualEndDate    DateTime?
  dependencies     Json?
  color            String?
  sinapiCodigo     String?           @db.VarChar(20)
  areaTipo         AreaTipo?
  tags             String[]          @default([])
  padrao           Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  // Relations
  project              Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parent               ProjectActivity?     @relation("ActivityHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children             ProjectActivity[]    @relation("ActivityHierarchy")
  unitActivities       UnitActivity[]
  measurements         Measurement[]
  contractorActivities ContractorActivity[]
  serviceLinks         ActivityServiceLink[]
  levantamentoItens    LevantamentoItem[]

  @@index([projectId])
  @@index([parentId])
  @@map("project_activities")
}

model UnitActivity {
  id         String         @id @default(uuid())
  activityId String
  unitId     String?
  progress   Decimal        @db.Decimal(5, 2) @default(0)
  status     ActivityStatus @default(PENDING)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  // Relations
  activity     ProjectActivity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  unit         Unit?           @relation(fields: [unitId], references: [id], onDelete: Cascade)
  measurements Measurement[]

  @@unique([activityId, unitId])
  @@index([activityId])
  @@index([unitId])
  @@map("unit_activities")
}

model Measurement {
  id               String            @id @default(uuid())
  tenantId         String
  activityId       String
  unitActivityId   String?
  contractorId     String?
  reportedBy       String
  progress         Decimal           @db.Decimal(5, 2)
  previousProgress Decimal           @db.Decimal(5, 2) @default(0)
  photos           Json?
  notes            String?           @db.Text
  status           MeasurementStatus @default(PENDING)
  reviewedBy       String?
  reviewedAt       DateTime?
  reviewNotes      String?           @db.Text
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  // Relations
  tenant       Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  activity     ProjectActivity  @relation(fields: [activityId], references: [id], onDelete: Cascade)
  unitActivity UnitActivity?    @relation(fields: [unitActivityId], references: [id], onDelete: SetNull)
  contractor   Contractor?      @relation(fields: [contractorId], references: [id], onDelete: SetNull)
  reporter     User             @relation(fields: [reportedBy], references: [id], name: "measurementReporter")
  reviewer     User?            @relation(fields: [reviewedBy], references: [id], name: "measurementReviewer")

  @@index([activityId])
  @@index([unitActivityId])
  @@index([status])
  @@index([contractorId])
  @@index([tenantId])
  @@map("measurements")
}

// ==================== SINAPI (Global - sem tenantId) ====================

enum SinapiTipoInsumo {
  MATERIAL
  MAO_DE_OBRA
  EQUIPAMENTO
  SERVICO
}

enum LevantamentoTipo {
  MANUAL
  SINAPI
}

model SinapiInsumo {
  id        String          @id @default(uuid())
  codigo    String          @unique
  descricao String          @db.Text
  unidade   String
  tipo      SinapiTipoInsumo
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  composicaoItens SinapiComposicaoInsumo[]
  precos          SinapiPreco[]

  @@index([codigo])
  @@index([tipo])
  @@map("sinapi_insumos")
}

model SinapiComposicao {
  id        String   @id @default(uuid())
  codigo    String   @unique
  descricao String   @db.Text
  unidade   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  itens  SinapiComposicaoInsumo[]
  filhos SinapiComposicaoFilho[]  @relation("ComposicaoPai")
  pais   SinapiComposicaoFilho[]  @relation("ComposicaoFilho")

  @@index([codigo])
  @@map("sinapi_composicoes")
}

model SinapiComposicaoFilho {
  id           String  @id @default(uuid())
  composicaoId String
  filhoId      String
  coeficiente  Decimal @db.Decimal(12, 6)

  composicao SinapiComposicao @relation("ComposicaoPai", fields: [composicaoId], references: [id], onDelete: Cascade)
  filho      SinapiComposicao @relation("ComposicaoFilho", fields: [filhoId], references: [id], onDelete: Cascade)

  @@unique([composicaoId, filhoId])
  @@index([composicaoId])
  @@index([filhoId])
  @@map("sinapi_composicao_filhos")
}

model SinapiComposicaoInsumo {
  id            String @id @default(uuid())
  composicaoId  String
  insumoId      String
  coeficiente   Decimal @db.Decimal(12, 6)

  composicao SinapiComposicao @relation(fields: [composicaoId], references: [id], onDelete: Cascade)
  insumo     SinapiInsumo     @relation(fields: [insumoId], references: [id], onDelete: Cascade)

  @@unique([composicaoId, insumoId])
  @@index([composicaoId])
  @@index([insumoId])
  @@map("sinapi_composicao_insumos")
}

model SinapiPreco {
  id           String   @id @default(uuid())
  insumoId     String
  uf           String   @db.VarChar(2)
  mesReferencia String  @db.VarChar(7) // "2024-01"
  precoDesonerado    Decimal @db.Decimal(12, 2)
  precoNaoDesonerado Decimal @db.Decimal(12, 2)
  createdAt    DateTime @default(now())

  insumo SinapiInsumo @relation(fields: [insumoId], references: [id], onDelete: Cascade)

  @@unique([insumoId, uf, mesReferencia])
  @@index([insumoId])
  @@index([uf, mesReferencia])
  @@map("sinapi_precos")
}

model SinapiImportLog {
  id            String   @id @default(uuid())
  tipo          String   // "INSUMOS" | "COMPOSICOES" | "PRECOS"
  fileName      String
  totalRecords  Int
  importedCount Int
  errorCount    Int      @default(0)
  errors        Json?
  importedBy    String
  createdAt     DateTime @default(now())

  @@index([tipo])
  @@index([createdAt])
  @@map("sinapi_import_logs")
}

// ==================== LEVANTAMENTO (Per-Tenant) ====================

model ProjetoLevantamento {
  id            String          @id @default(uuid())
  tenantId      String
  projectId     String
  floorPlanId   String?
  nome          String
  tipo          LevantamentoTipo @default(MANUAL)
  uf            String?         @db.VarChar(2)
  mesReferencia String?         @db.VarChar(7)
  observacoes   String?         @db.Text
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  floorPlan FloorPlan? @relation(fields: [floorPlanId], references: [id], onDelete: SetNull)
  itens     LevantamentoItem[]
  ambientes Ambiente[]

  @@index([tenantId])
  @@index([projectId])
  @@index([floorPlanId])
  @@map("projeto_levantamentos")
}

model Ambiente {
  id              String       @id @default(uuid())
  levantamentoId  String
  nome            String
  tags            String[]     @default([])
  comprimento     Decimal      @db.Decimal(8, 2)
  largura         Decimal      @db.Decimal(8, 2)
  peDireito       Decimal      @db.Decimal(4, 2) @default(2.80)
  qtdPortas       Int          @default(1)
  qtdJanelas      Int          @default(1)
  valorDireto     Decimal?     @db.Decimal(12, 4)
  tipoMedicao     String?
  areaTipo        String?
  observacoes     String?      @db.Text
  order           Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  levantamento ProjetoLevantamento @relation(fields: [levantamentoId], references: [id], onDelete: Cascade)
  itens        LevantamentoItem[]

  @@index([levantamentoId])
  @@map("ambientes")
}

model AmbienteTag {
  id        String   @id @default(uuid())
  tenantId  String
  nome      String
  slug      String
  descricao String?
  cor       String?  @default("#3b82f6")
  order     Int      @default(0)
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, slug])
  @@index([tenantId])
  @@map("ambiente_tags")
}

model LevantamentoItem {
  id              String  @id @default(uuid())
  levantamentoId  String
  ambienteId      String?
  nome            String
  unidade         String
  quantidade      Decimal @db.Decimal(12, 4)
  precoUnitario   Decimal @db.Decimal(12, 2)
  etapa           String?
  sinapiInsumoId  String?
  sinapiComposicaoId String?
  projectActivityId  String?
  observacoes     String? @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  levantamento    ProjetoLevantamento @relation(fields: [levantamentoId], references: [id], onDelete: Cascade)
  ambiente        Ambiente?           @relation(fields: [ambienteId], references: [id], onDelete: SetNull)
  projectActivity ProjectActivity?    @relation(fields: [projectActivityId], references: [id], onDelete: SetNull)

  @@index([levantamentoId])
  @@index([ambienteId])
  @@index([etapa])
  @@index([projectActivityId])
  @@map("levantamento_itens")
}

// ==================== SERVICO TEMPLATES (Per-Tenant) ====================

enum AreaTipo {
  PISO
  PAREDE_LIQ
  PAREDE_BRUTA
  TETO
  PERIMETRO
  MANUAL
  VOLUME
  LINEAR
}

model ServicoTemplate {
  id           String   @id @default(uuid())
  tenantId     String
  sinapiCodigo String?  @db.VarChar(20)
  nomeCustom   String?
  areaTipo     AreaTipo
  tags         String[] @default([])
  padrao       Boolean  @default(true)
  etapa        String
  order        Int      @default(0)
  ativo        Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant        Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  activityLinks ActivityServiceLink[]

  @@index([tenantId])
  @@index([sinapiCodigo])
  @@map("servico_templates")
}

// ==================== ACTIVITY-SERVICE LINK ====================

model ActivityServiceLink {
  id                  String   @id @default(uuid())
  projectActivityId   String
  servicoTemplateId   String
  isDefault           Boolean  @default(true)
  createdAt           DateTime @default(now())

  projectActivity ProjectActivity @relation(fields: [projectActivityId], references: [id], onDelete: Cascade)
  servicoTemplate ServicoTemplate @relation(fields: [servicoTemplateId], references: [id], onDelete: Cascade)

  @@unique([projectActivityId, servicoTemplateId])
  @@index([projectActivityId])
  @@map("activity_service_links")
}
